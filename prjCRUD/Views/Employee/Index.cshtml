@model IEnumerable<prjCRUD.Models.Employee>

@{
    ViewBag.Title = "Employee Data";
}

<h2>Employee Data</h2>

<p>@Html.ActionLink("Create", "Create",new { },new { @class = "btn btn-primary" })</p>

@if (Model.Count() == 0)
{
    <p>No Data</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpMail)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.EmpId
                </td>
                <td>
                    @item.EmpName
                </td>
                <td>
                    @item.EmpPhone
                </td>
                <td>
                    @item.EmpMail
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmpId }, new { @class = "btn btn-danger"})
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }, new { @class = "btn btn-info"})
                </td>
            </tr>
        }
    </table>
}

